# ====================================
# CloudCam - Environment Configuration (MVP)
# ====================================

# ===== Application Settings =====
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*

# ===== Database =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cloudcam_prod
POSTGRES_USER=cloudcam_user
POSTGRES_PASSWORD=dev_password_123

# ===== JWT Authentication =====
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ===== Google OAuth =====
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ===== Google Drive API =====
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY=your_service_account_private_key

# ===== Storage Settings =====
STORAGE_DIR=./storage
SEGMENT_DURATION=300  # 5 minutes in seconds
MAX_STORAGE_GB=10
ENABLE_VIDEO_ENCRYPTION=false
AES_ENCRYPTION_KEY=your_secure_encryption_key_change_this_in_production

# ===== Camera Settings =====
DEFAULT_CAMERA_USERNAME=admin
DEFAULT_CAMERA_PASSWORD=password

# ===== Logging =====
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/cloudcam.log

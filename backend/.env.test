# Configuración de prueba para el entorno de pruebas
NODE_ENV=test
PORT=3002  # Puerto diferente al de desarrollo

# Base de datos de prueba (debería ser una base de datos separada de desarrollo)
DATABASE_URL=postgresql://cloudcam_user:test_password@localhost:5432/cloudcam_test
TEST_DATABASE_URL=postgresql://cloudcam_user:test_password@localhost:5432/cloudcam_test

# Configuración de JWT para pruebas
JWT_SECRET=test_jwt_secret_change_in_production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_EMAIL_VERIFICATION_EXPIRES_IN=24h
JWT_PASSWORD_RESET_EXPIRES_IN=1h

# Configuración de OAuth de Google para pruebas
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3002/api/auth/google/callback

# Configuración de correo electrónico para pruebas
# En pruebas, usamos un servicio de correo falso
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASS=test_password
EMAIL_FROM=Test CloudCam <test@cloudcam.test>
EMAIL_REPLY_TO=no-reply@cloudcam.test

# URLs de la aplicación
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3002

# Configuración de rate limiting para pruebas
RATE_LIMIT_WINDOW_MS=60000  # 1 minuto para pruebas
RATE_LIMIT_MAX_REQUESTS=1000  # Límite alto para pruebas
AUTH_RATE_LIMIT_MAX_REQUESTS=10  # Límite para autenticación
REGISTER_RATE_LIMIT_MAX_REQUESTS=5  # Límite para registro

# Configuración de sesión
SESSION_SECRET=test_session_secret_change_in_production

# Configuración de seguridad
HELMET_ENABLED=false  # Deshabilitar en pruebas para simplificar
HSTS_ENABLED=false    # Deshabilitar en pruebas
CORS_ORIGIN=*

# Configuración de características
EMAIL_VERIFICATION_REQUIRED=false  # Deshabilitar verificación de correo en pruebas
PASSWORD_RESET_ENABLED=true
GOOGLE_OAUTH_ENABLED=true

# Configuración de logs
LOG_LEVEL=error  # Solo errores en pruebas para reducir ruido

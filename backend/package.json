{
  "name": "cloudcam-simple-backend",
  "version": "1.0.0",
  "description": "Simplified MVP for CloudCam - Automatic IP camera backup to Google Drive",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:unit": "jest --selectProjects 'Unit Tests' --passWithNoTests",
    "test:integration": "jest --selectProjects 'Integration Tests' --passWithNoTests",
    "test:e2e": "jest --selectProjects 'E2E Tests' --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --runInBand --coverage"
  },
  "keywords": [
    "ip-camera",
    "surveillance",
    "backup",
    "google-drive"
  ],
  "author": "CloudCam Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/handlebars": "^4.0.40",
    "@types/helmet": "^0.0.48",
    "@types/nodemailer": "^6.4.17",
    "@types/socket.io": "^3.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bonjour-service": "^1.3.0",
    "bullmq": "^5.56.8",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "google-auth-library": "^9.6.0",
    "googleapis": "^128.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "node-onvif": "^0.1.7",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fluent-ffmpeg": "^2.1.22",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "axios": "^1.11.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  }
}
